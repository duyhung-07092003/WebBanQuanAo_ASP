@model WebBanQuanAo.Models.NguoiDung

@{
    ViewBag.Title = "Sửa thông tin người dùng";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2>Sửa thông tin người dùng</h2>

    @using (Html.BeginForm("SuaUser", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.HiddenFor(model => model.MaNguoiDung)
        </div>
        <div class="form-group">
            @Html.HiddenFor(model => model.TenDangNhap)
        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.MatKhau)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email)
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", disabled = "disabled" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DiaChi)
            @Html.TextBoxFor(model => model.DiaChi, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SoDienThoai)
            @Html.TextBoxFor(model => model.SoDienThoai, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ChucVu)
            @Html.TextBoxFor(model => model.ChucVu, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HoVaTen)
            @Html.TextBoxFor(model => model.HoVaTen, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        </div>
    }
</div>
