@model WebBanQuanAo.Models.DonHang

@{
    ViewBag.Title = "Sửa trạng thái đơn hàng";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<h2>Sửa trạng thái đơn hàng</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.MaDonHang)
    <div class="form-group">
        @Html.LabelFor(model => model.TrangThai, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.TrangThai, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input type="submit" value="Lưu cập nhật" class="btn btn-primary" />
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "DH", null, new { @class = "btn btn-secondary" })
</div>
